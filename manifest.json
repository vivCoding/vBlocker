{
    "manifest_version": 2,
    "name": "vBlocker",
    "version": "1.0",
    "description": "Blocks user specified domains",
    "icons": {
        "48": "assets/logo-48.png",
        "96": "assets/logo-96.png"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "storage",
        "management"
    ],
    "browser_action": {
        "default_icon": "assets/logo-32.png",
        "default_title": "vBlocker",
        "default_popup": "popup/popup.html"
    },
    "options_ui": {
        "page": "settings/settings.html",
        "open_in_tab": true
    },
    "background": {
        "scripts": [
            "src/background.js"
        ]
    },
    "web_accessible_resources": [
        "blocked/blocked.html"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "lib/jquery_3.6_min.js",
                "src/main.js"
            ]
        }
    ]
}