{
    "manifest_version": 2,
    "name": "vBlocker",
    "version": "1.0",
  
    "description": "Blocks user specified domains",

    "permissions": [
        "webRequest", "webRequestBlocking", "<all_urls>"
    ],

    "icons": {
        "48": "assets/logo-48.png",
        "96": "assets/logo-96.png"
    },

	"browser_action": {
		"default_icon": "assets/logo-32.png",
		"default_title": "vBlocker",
        "default_popup": "popup/index.html"
	},

    "options_ui": {
        "page": "pages/settings.html",
        "open_in_tab": true
    },

    "background": {
        "scripts": [
            "lib/urlParser.js",
            "src/background.js"
        ]
    },

    "web_accessible_resources": [
        "pages/blocked.html"
    ],

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
				"lib/jquery_3.6_min.js",
                "lib/urlParser.js",
				"src/main.js"
			]
        }
    ]
}
